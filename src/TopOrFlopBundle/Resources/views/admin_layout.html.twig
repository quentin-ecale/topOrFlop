<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>{% block title %}Top or Flop - Administration{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('bundles/toporflop/css/bootstrap.min.css') }}"
              type="text/css" rel="stylesheet" />
    {% endblock%}
</head>
<body>
<div class="container">
    <div class="row">
        <div class="span3">
            <ul class="nav nav-tabs nav-stacked">
                <li><a href="{{ path('index') }}">Retourner au site</a></li>
            </ul>
        </div>
        <div class="span9">
            {% for type, flashMessages in app.session.flashBag.all() %}
                {% for flashMessage in flashMessages %}
                    <div class="alert alert-{{ type }}">
                        <button type="button" class="close" data-dismiss="alert">x</button>
                        {{ flashMessage }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block content %}{% endblock %}
        </div>
    </div>
</div>
{% block javascripts %}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
    <script src="{{ asset('bundles/toporflop/js/bootstrap.min.js') }}"
            type="text/javascript"></script>
{% endblock %}
</body>
</html>